<% layout('../layouts/default') -%>

<% script('/js/formula_helper_script.js') -%>
<% script('/js/formula_bicarbonate.js') -%>

<% stylesheet('/css/f2_main_style.css') -%>
<% stylesheet('/css/f2_calculator_style.css') -%>
<% stylesheet('/css/f2_infolist_style.css') -%>

<div class="calculated-formulas">
  <div class="f2_header f2_blue">
    <h1>Bikarbonat</h1>
  </div>
  <div class="f2_description">
    <p>Info from Kenan</p>
  </div>
  <div class="f2_calculator">
    <div class="form-style-calculator">
      <form method="POST">
	<label for="Negative Base Deviation">Negativer Base Excess (&#8211BE):</label> 
	<input type="text" class="f2_be-input f2_js" placeholder="in mmol/L">
	<label for="gewicht">Gewicht:</label> 
	<input type="text" class="f2_weight-input f2_js" placeholder="in kg">
	<input type="button" class="f2_btn-calc f2_js"  value="Berechnen">
	<input type="button" class="f2_btn-reset f2_js" value="Zurücksetzen">
	<input type="text" class="f2_nahco-output f2_js" placeholder="NaHCO3">
	<div class="form-style-calculator-footnotes f2_formula_image">
	  <h3>Verwendete Formel:<br>NaHCO<sub>3</sub> = &#8211BE &times KG(kg) &times 0,3</h3>
	</div>
      </form>
    </div>
  </div>
  <div class="f2_further-info f2_blue">
    <h3>Weiterführende Inhalte in AMBOSS</h3>
    <div class="new-list">
      <ul>
	<li><a target="_blank" href="https://amboss.miamed.de/library#xid=Io0YWS">Säure-Basen-Haushalt</a></li>
      </ul>
    </div>
  </div>
</div>
